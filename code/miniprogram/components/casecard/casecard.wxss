.caseCard{
  height: 200px;
  width: 20rem;
  position: relative;
  box-shadow: 10px #ccc;
  margin-bottom: 30px;
}

.caseCard>image{
  width: 100%;
  height: 100%;
  border-radius: 10px !important;
}

.caseCardText{
  color: #fff;
  font-family:YouYuan;
  font-weight: 800;
  font-size: 32px;
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%,-50%);
}

.caseBtn{
  position: absolute;
  top: 0;
  left: 0;
  display: block;
  width: 100%;
  z-index: 999;
  text-align: center;
  line-height: 200px;
  color: #fff;
  font-size: 30px;
  font-weight: bold;
  background: rgba(0, 0,0, 0.5);
  border-radius: 10px !important;
}