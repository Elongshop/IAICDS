@import '../common.wxss';
.scroll-view-container{
  position: relative;
}
.loading-container{
  width: 100%;
  height: 240px;
  display: flex;
  justify-content: center;
  align-items: center;
}
scroll-view {
  border:none;
}

.gkTitle {
  width: 25%;
  height: 30px;
  line-height: 30px;
  text-align: center;
  font-weight: bold;
  color:#444;
  font-size: 1rem;
}

.gkContentBox {
  display: flex;
  width: 100%;
  font-size: 1rem;
  height: 30px;
  line-height: 30px;
  border-bottom: 1px solid #999;
}

.gkContentBox:last-child {
  border: none;
}

.gkContent {
  width: 25%;
  text-align: center;
}

.gkName{
  font-weight:600;
  color:#666;
}

.scroll-view-icon{
  position: absolute;
  right: 18%;
  top:55%;
}

.js-icon{
  position: absolute;
  left: 20%;
  bottom: 15%;
}

.cloud-icon{
  position: absolute;
  left: 45%;
  top:25%;
  z-index: 999;
  width: 35px;
}