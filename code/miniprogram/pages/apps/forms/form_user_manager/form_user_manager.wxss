.box{
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  padding-bottom: 40%;
}
.title{
  width: 100%;
  box-sizing: border-box;
  height: 50px;
  line-height: 50px;
  font-size: 1.5rem;
  font-weight: bold;
  text-align: center;
  color: #1296db;
}

.subtitle{
  width: 100%;
  box-sizing: border-box;
  height: 30px;
  line-height: 30px;
  text-align:center;
  color: rgb(80,80,80);
}

.admin-box,.devops-box{
  width: 80%;
  text-align: center;
  height: 40px;
  line-height: 40px;
  background-color: rgb(74, 124, 74);
  color: white;
  margin-bottom: 10px;
}

.admin-box{
  margin-top: 50px;
}