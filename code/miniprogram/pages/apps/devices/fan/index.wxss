

.tool-icon{
  width: 30px;
  height: 30px;
  position: absolute;
  top: 50%;
  transform: translateY(-50%);
  right: 0;
}

.tool-box{
  position: absolute;
  top: -30px;
  right: 0%;
  width: 70px;
  height: 120px;
  z-index: 999;
}

.box-container{
  position: absolute;
  top: 0%;
  left: 0%;
  height: 120px;
  width: 40px;
}

.box-container .ui-box{
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 20px;
  width: 40px;
  height: 40px;
  background-color: #707070;
  color: white;
  z-index: 999;
}

.box-container .js-box{
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 20px;
  width: 40px;
  height: 40px;
  background-color: rgba(255, 255, 0,1);
  color: black;
  z-index: 999;
}

.box-container .cloud-box{
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 20px;
  width: 40px;
  height: 40px;
  color: white;
  background-color: #1295dbe0;
  z-index: 999;
  font-family: Microsoft Yahei;
}